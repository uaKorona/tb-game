{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "NodeNext",
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "spa", "public", ".eslintrc.js"]
}

